{
    "manifest_version": 3,
    "name": "Daily Focus",
    "version": "1.0",
    "description": "Simple daily goal tracking, one goal at a time",
    "permissions": [
        "storage",
        "notifications",
        "alarms"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Daily Focus"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}